#include "fillit.h"

void	exclude_letter_occurences_except_row(\
	t_node **m_lst, char letter, int row)
{
	int		i;

	i = 0;
	while (m_lst[i])
	{
		if (m_lst[i]->role == 'b')
		{
			if (m_lst[i]->c > letter)
				break ;
			else if (m_lst[i]->c < letter)
				continue ;
			else if (m_lst[i]->c == letter && m_lst[i]->x != row)
				delete_node(m_lst[i]);
		}
		i += 1;
	}
}

